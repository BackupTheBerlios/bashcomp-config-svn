AC_INIT(bash-completion-config.in)
AC_CONFIG_AUX_DIR(config)

PACKAGE="bash-completion-config"
VERSION="0.1"
AC_SUBST(PACKAGE)
AC_SUBST(VERSION)

BASHCOMP_DIR="/usr/share/bash-completion"
INSTALL_DIR=".bash_completion.d"
GLOBAL_INSTALL_DIR="/etc/bash_completion.d"
AC_SUBST(BASHCOMP_DIR)
AC_SUBST(INSTALL_DIR)
AC_SUBST(GLOBAL_INSTALL_DIR)

AM_INIT_AUTOMAKE($PACKAGE, $VERSION)

AC_CHECK_PROG(BASH, bash, bash, [AC_MSG_ERROR([bash is required])])

AC_OUTPUT([
    Makefile
    completion
    bash-completion-config
    bash-completion-config.1
], [chmod +x bash-completion-config])

